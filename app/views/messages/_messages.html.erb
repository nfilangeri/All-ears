<% messages.last(5).each do |message| %>
  <div class="box">
      <% if message.user == current_user %>
        <div class="me" id="me">
          <div class="message-container" id="message-<%= message.id %>">
            <i class="author">
              <span><%= message.user.username %></span>
              <small>    <%= distance_of_time_in_words(Time.now -  message.created_at) + ' ago' %></small>
            </i>
            <p id="p-topic"><%= message.content %></p>
          </div>
      <% else %>
        <div class="other" id="other">
          <div class="message-container" id="message-<%= message.id %>">
            <i class="author">
              <span><%= message.user.username %></span>
              <small>    <%= distance_of_time_in_words(Time.now -  message.created_at) + ' ago' %></small>
            </i>
            <p id="p-topic"><%= message.content %></p>
          </div>
      <% end %>
    </div>
    </div>
    <% end %>
  </div>
