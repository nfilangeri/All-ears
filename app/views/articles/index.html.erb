<div class="input-group rounded">
  <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search"
    aria-describedby="search-addon" />
  <span class="input-group-text border-0" id="search-addon">
    <i class="fas fa-search"></i>
  </span>
</div>
<div class="form-inline">
  <%= form_tag animals_path, method: :get do %>
  <%= text_field_tag :query,
              params[:query],
          class: "form-control",
          placeholder: "News topic"%>
          <%= submit_tag "Find now!", class: "btn btn-ghost" %>
          <% end %>
<div class="index-all">
  <div id="first-row">
    <div class="first-2">
      <% @articles.first(2).each do |article|%>
      <div class="each-card">
        <%= image_tag "https://images.unsplash.com/photo-1472396961693-142e6e269027?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=606&q=80", width:350, height:200 %>
        <p><%= link_to article.title, article_path(article)%></p>
        <p>
          <%= article.publication_date %>
          <%= article.newspaper.tag_political %>
        </p>
        <% if policy(Article).destroy? %>
        <%= link_to "Delete article", article_path(article), method: :delete, data: { confirm: "Delete article?" } %>
        <% end %>
      </div>
      <% end %>
    </div>
    <div class="third">
      <% article_3 = @articles[3] %>
      <div class="middle-card">
        <%= image_tag "https://images.unsplash.com/photo-1472396961693-142e6e269027?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=606&q=80", width:500, height:350 %>
