 <div class="index-all">
    <div id="first-row">
      <div class="first-2">
        <% @articles.last(2).each do |article|%>
        <div class="each-card">
          <%= image_tag "https://images.unsplash.com/photo-1472396961693-142e6e269027?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=606&q=80", width:370, height:200 %>
          <h3><%= link_to article.title, article_path(article)%></h3>
          <p><%= article.description%></p>
          <p>
            <%= article.publication_date %>
            <%= article.newspaper.tag_political %>
          </p>
        </div>
        <% end %>
      </div>
      <div class="third">
        <% article_3 = @articles[-3] %>
        <div class="middle-card">
          <%= image_tag "https://images.unsplash.com/photo-1472396961693-142e6e269027?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=606&q=80", width:500, height:350 %>
          <h1><%= link_to article_3.title, article_path(article_3)%></h1>
          <p><%= article_3.description %></p>
          <p>
            <%= article_3.publication_date %>
            <%= article_3.newspaper.tag_political %>
          </p>
        </div>
      </div>
      <div class="right-2">
        <div class="each-card">
          <% article_4 = @articles[-4] %>
          <%= image_tag "https://images.unsplash.com/photo-1472396961693-142e6e269027?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=606&q=80", width:370, height:200 %>
          <h3><%= link_to article_4.title, article_path(article_4)%></h3>
          <p><%= article_4.description%></p>
          <p>
            <%= article_4.publication_date %>
            <%= article_4.newspaper.tag_political %>
          </p>
        </div>
        <div class="each-card">
          <% article_5 = @articles[-5] %>
          <%= image_tag "https://images.unsplash.com/photo-1472396961693-142e6e269027?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=606&q=80", width:370, height:200 %>
          <h3><%= link_to article_5.title, article_path(article_5)%></h3>
          <p><%= article_5.description%></p>
          <p>
            <%= article_5.publication_date %>
            <%= article_5.newspaper.tag_political %>
          </p>
        </div>
      </div>
    </div>
  </div>

<script>
  var bookmark = document.querySelector('.fa-bookmark');

  bookmark.onclick = function () {
   this.style.color = "black"
  };
</script>

<% if user_bookmark.present? %>
      <i class="fas fa-bookmark fa"></i>
      <% end %>
    <% user_bookmark = @article.bookmarks.each do|bookmark| %>
      <%= bookmark.user == current_user%>
    <% end %>
    <%= link_to article_bookmarks_path(@article, current_user), method: :post do %>
      <i class="fas fa-bookmark fa"></i>
    <% end %>




