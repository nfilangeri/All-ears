<div class="d-flex row justify-content-center" id="chat">
  <div class="topic">
    <h1><%= @topic.subject %></h1>

    <div>
      <div id="messages" data-topic-id="<%= @topic.id %>">
        <%= render "messages/messages", messages: @topic.messages.last(8) %>
      </div>

      <%= simple_form_for [ @topic, @message ], remote: true do |f| %>
        <%= f.input :content, as: :string , label: false  %>
      <% end %>
    </div>
  </div>
</div>