<div class="d-flex row justify-content-center" id="chat">
  <div class="topic">
    <h3 class="mb-3">Share what you think with the others </h3>

    <div>
      <div id="messages" data-topic-id="<%= @topic.id %>">
        <%= render "messages/messages", messages: @topic.messages.last(8) %>
      </div>

      <div>
      <% if user_signed_in? %>
        <%= simple_form_for [ @topic, @message ], remote: true do |f| %>
          <%= f.input :content, as: :string , label: "Leave a comment"  %>
        <% end %>
      <% else %>
        <h4>You have to be logged to participate!!</h4>  
      <% end %>
      </div>
    </div>
  </div>
</div>
