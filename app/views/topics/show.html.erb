<div>
    <div class="row mt-2 ml-5" id="back">
        <%= link_to "Back to all topics", topics_path %>
    </div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <div class="d-flex justify-content-center">
                    <h2><%= @topic.subject %></h2>
                </div>
                <div class="row justify-content-center" id="photo">
                    <% if @topic.photo.attached?%>
                        <%= cl_image_tag @topic.photo.key, height: 400, width: 600, crop: :fill %>
                    <% else %>
                        <img src="https://images.unsplash.com/photo-1495020689067-958852a7765e?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&h=400&w=600&q=80", alt="newspapers image">
                    <% end %>
                </div>
                <div class="d-flex justify-content-center mt-5" id="content">
                    <%= @topic.content %>
                </div>
            </div>
        </div>
    </div>
    <div id="chatroom">
        <%= render "chatbox" %>
    </div>
</div>