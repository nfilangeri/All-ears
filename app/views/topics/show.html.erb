<div class="row mt-2 ml-5">
    <%= link_to "Back to all topics", topics_path %>
</div>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
            <div class="d-flex justify-content-center">
                <h2><%= @topic.subject %></h2>
            </div>
            <div>
                <% if @topic.photo.attached?%>
                    <%= cl_image_tag @topic.photo.key, height: 400, width: 600, crop: :fill %>
                <% else %>
                    <img id="placeholder-img-profil" src="https://unsplash.com/photos/_Zua2hyvTBk" width="600" height="400">
                <% end %>
            </div>
            <div class="d-flex justify-content-center mt-5">
                <%= @topic.content %>
            </div>
        </div>
    </div>
</div>